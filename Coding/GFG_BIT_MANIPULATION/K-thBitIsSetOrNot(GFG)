GFG: K-th Bit is Set or Not ( LEFT SHIFT + AND or RIGHT SHIFT + AND)

//      USING LEFT SHIFT

class Solution {
  public:
    // Function to check if Kth bit is set or not.
    bool checkKthBit(int n, int k) {
        
        if((n&(1<<k))!=0)
        {
            return true;
        }
        return false;
        
    }
};

//   USING RIGHT SHIFT
class Solution {
  public:
    // Function to check if Kth bit is set or not.
    bool checkKthBit(int n, int k) {
        
        if(((n>>k) &1)==1)
        {
            return true;
        }
        return false;
        
    }
};
